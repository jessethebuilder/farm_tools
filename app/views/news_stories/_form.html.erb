<%= form_for(@news_story, :multipart => true) do |f| %>
  <%= error_explanation(@news_story) %>

  <div id="news_story_form">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <span class="form-control-static">
          Status: <strong><%= @news_story.publication_status.titlecase %></strong>
          </span>
        </div>
        <div class="form-group">
          <%= f.label :title, :class => 'control-label' %>
          <%= f.text_field :title, :class => 'form-control', :required => true %>
        </div>
      </div><!-- col -->

      <!--<div class="col-md-6"></div>&lt;!&ndash; col &ndash;&gt;-->
    </div><!-- row -->

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :content, :class => 'control-label' %>
          <%= f.bootsy_area :content, :class => 'form-control' %>
        </div>
      </div><!-- col -->
    </div><!-- row -->

    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <%= f.label :excerpt, :class => 'control-label' %>
          <%= f.text_field :excerpt, :class => 'form-control' %>
        </div>
      </div><!-- col -->
    </div><!-- row -->

    <%= image_select f, :main_news_story_image, :version => :small %><!-- row -->

    <div class="row form_button_row">
      <div class="col-xs-12">
        <%= button_row(@news_story, f) %>
      </div><!-- col -->
    </div><!-- row -->
  <% end %>
</div>
